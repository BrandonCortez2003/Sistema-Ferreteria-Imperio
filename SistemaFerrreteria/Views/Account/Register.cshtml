@model SistemaFerrreteria.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<!DOCTYPE html>

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="~/Content/estilosMenu.css">
    <link rel="stylesheet" href="~/Content/menuRegis.css">
</head>
<body>
    <div class="center">
        <h1 id="title">@ViewBag.Title.</h1>
        <section id="loginForm">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="txt_field">
                    <input type="email" required @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })


                    <label>Correro eléctronico</label>

                </div>
                <div class="txt_field">

                    <input type="password" required @Html.PasswordFor(m => m.Password, new { @class = "form-control" })


                    <label>Contraseña</label>

                </div>
                <div class="txt_field">

                    <input type="password" required @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })


                    <label>Confirme Contraseña</label>

                </div>

                <div class="row">
                    <input type="submit" value="Registrarse" class="boton" />
                </div>


                @*//Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
                    <p>
                        @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
