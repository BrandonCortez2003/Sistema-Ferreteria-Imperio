@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/Style.css")

<style>
    #miCarrusel {
        border-radius: 20px;
        box-shadow: 0 1px 20px rgb(0, 0, 0);
        overflow: hidden; /* Asegura que la sombra se muestre correctamente */
    }

    .fondoespa {
        padding: 20px;
    }

    .carousel-inner {
        border-radius: 20px;
        overflow: hidden; /* Asegura que la sombra se muestre correctamente */
